class Team:
    def __init__(self, name, country, logo, points=0, played=0, wins=0, draws=0, losses=0, gf=0, ga=0):
        self.name = name
        self.country = country
        self.logo = logo
        self.points = points
        self.played = played
        self.wins = wins
        self.draws = draws
        self.losses = losses
        self.gf = gf  # goals for
        self.ga = ga  # goals against
    
    def goal_difference(self):
        return self.gf - self.ga
    
    def update(self, gf, ga):
        self.played += 1
        self.gf += gf
        self.ga += ga
        
        if gf > ga:
            self.wins += 1
            self.points += 3
        elif gf == ga:
            self.draws += 1
            self.points += 1
        else:
            self.losses += 1

class Group:
    def __init__(self, letter):
        self.letter = letter
        self.teams = []
    
    def add_team(self, team):
        self.teams.append(team)
    
    def standings(self):
        return sorted(self.teams, key=lambda x: (-x.points, -x.goal_difference(), -x.gf, x.name))

