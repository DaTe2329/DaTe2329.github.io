/* Basic styling for the body */
body {
  font-family: 'Roboto', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f4f4f4;
  color: #333;
}

/* Navigation Menu */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #333;
  padding: 1rem 2rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Added shadow for depth */
}

.navbar .logo {
  display: flex;
  align-items: center;
}

.navbar .logo h1 {
  color: #fff;
  font-size: 24px;
  margin-left: 10px; /* Space between logo and text */
}

.navbar .logo img {
  width: 40px; /* Logo image size */
  height: auto;
  border-radius: 50%;
}

/* Navigation Links */
.nav-links {
  list-style: none;
  display: flex;
}

.nav-links li {
  margin-left: 20px;
}

.nav-links a {
  text-decoration: none;
  color: #fff;
  font-weight: 500;
  transition: color 0.3s ease; /* Smooth hover transition */
}

.nav-links a:hover {
  color: #ff5c5c; /* Red highlight on hover */
}

/* Main Section */
.main-section {
  text-align: center;
  padding: 4rem 2rem;
  background-color: #fff;
  margin-top: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Added shadow for depth */
  border-radius: 8px; /* Rounded corners for a soft look */
}

.main-section h2 {
  font-size: 36px;
  margin-bottom: 20px;
}

.main-section p {
  font-size: 18px;
  margin-bottom: 30px;
}

.btn-bet-now {
  padding: 10px 20px;
  font-size: 18px;
  background-color: #007bff;
  color: #fff;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  transition: background-color 0.3s ease; /* Smooth hover transition */
}

.btn-bet-now:hover {
  background-color: #0056b3;
}

/* Matches Section */
.matches-section {
  padding: 2rem 2rem;
  background-color: #e9ecef;
}

.matches-section h2 {
  font-size: 32px;
  text-align: center;
  margin-bottom: 30px;
}

.match-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.match-card {
  background-color: #fff;
  padding: 20px;
  margin: 15px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  text-align: center;
  width: 250px;
  transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover transition */
}

.match-card:hover {
  transform: translateY(-5px); /* Hover effect for card */
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Enhanced hover shadow */
}

.match-card h3 {
  font-size: 24px;
  margin-bottom: 10px;
}

.match-card p {
  font-size: 16px;
  margin-bottom: 15px;
}

.match-card button {
  padding: 10px;
  font-size: 16px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease; /* Smooth hover transition */
}

.match-card button:hover {
  background-color: #218838;
}

/* Footer */
footer {
  text-align: center;
  background-color: #333;
  color: #fff;
  padding: 20px 0;
}
